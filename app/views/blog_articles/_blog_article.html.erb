
<% if blog_article.publish_now.downcase == 'yes' %>
  <h2><%= link_to blog_article.title, blog_article_path(blog_article.id) %></h2>
  <div >
    <p class='created_on'>Created on: <%= blog_article.created_at %></p>
    <div class='blog_body'><%= blog_article.body %></div>
    <br>
  </div>
<% end %>
