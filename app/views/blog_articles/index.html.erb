<div class='row'>
  <div class='col-lg-4'></div>
  <div class='col-lg-4' align='center'>
    <h1>The Blog</h1>
  </div>
  <div class='col-lg-4'></div>
</div>

<div class='row'>
  <div class='col-lg-2'></div>
  <div class='col-lg-5'>
    <%= render @blog_articles %>
  </div>
  <div class='col-lg-2'></div>
  <div class='col-lg-2'>
    <h4>Most Recent Posts</h4>
    <div class='btn-group-vertical'>
      <% @blog_articles.limit(10).each do |blog| %>
        <% if blog.publish_now.downcase == 'yes' %>
          <button type='button' class='btn btn-default'>
            <%= link_to blog.title, blog_article_path(blog) %>
          </button>
        <% end %>
      <% end %>
    </div>
  </div>
  <div class='col-lg-1'></div>

</div>

  



<div class="btn-group btn-group-justified" id='margin60'>
  <div class="btn-group">
    <button type="button" class="btn btn-default"><%= link_to 'Welcome', root_path%></button>
  </div>
  <div class="btn-group">
    <button type="button" class="btn btn-default"><%= link_to 'About Me', abouts_path %></button>
  </div>
  <div class="btn-group">
    <button type="button" class="btn btn-default"><%= link_to 'Contact',  new_letter_path %></button>
  </div>
</div>

