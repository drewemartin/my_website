<h3><%= @blog_article.title %></h3>
<p>Created at: <%= @blog_article.created_at %></p>
<div class='blog_body'><%= @blog_article.body %></div>

<script type="text/javascript">

    

    var temp = 1;

    replace();

    function replace(){
      $.each($('.blog_body'), function() { 
        temp = $(this).text();
        $(this).text('');
        $(this).html(temp);
      });
    }
</script>