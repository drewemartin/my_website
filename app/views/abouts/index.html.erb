
<div class='row'>
  <div class='col-lg-1'></div>
  <div class='col-lg-4' align='center'>
    <div id='abouts_pic_holder'>
      <%= image_tag 'edit.png', :id => 'abouts_pic' %>
    </div>
  </div>
  <div class='col-lg-6'>
    <h1 id='first'>About Me</h1>
    <div class='row-transparency'>
      <%= render 'bio' %>
    </div> 
    <div class='row'>
      <div class='col-lg-12' >
        <h1 class='title_padding'>My Skills</h1>
      </div>
    </div>
    <div class='row' id='load_charts'>
      <%= render 'charts' %>
      <div class='col-lg-2'></div>
    </div>
    <div class='row'>
      <div class='col-lg-12' >
        <h1 class='title_padding'>My Hobbies</h1>
      </div>
    </div>
    <div class='row'>
      <%= render 'hobbies' %>
      <div class='col-lg-2'></div>
    </div>
  </div>
  <div class='col-lg-1'></div>
</div>

<div class="btn-group btn-group-justified" id='abouts_footer'>
  <div class="btn-group">
    <%= link_to(root_path) do %>
    <button type="button" class="btn btn-default"><span class='footer_text_color'>Welcome</span></button>
    <% end %>
  </div>
  <div class="btn-group">
    <%= link_to(blog_articles_path) do %>
    <button type="button" class="btn btn-default"><span class='footer_text_color'>Blog</span></button>
    <% end %>
  </div>
  <div class="btn-group">
    <%= link_to(new_letter_path) do %>
    <button type="button" class="btn btn-default"><span class='footer_text_color'>Contact</span></button>
    <% end %>
</div>



 


<%= javascript_include_tag "Chart" %>





<script type="text/javascript">

$(document).ready(function(){
function testScroll(){
    if(window.pageYOffset>400)alert('User has scrolled at least 400 px!');
}
window.onscroll=testScroll

});
    
   
</script>














