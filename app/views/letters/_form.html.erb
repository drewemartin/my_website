<%= form_for(@letter,:remote => true) do |f| %>

  <div id='insert_errors'>
  </div>


  <div class='row'>
    <div class='col-lg-3'></div>
    <div class='col-lg-6' align='center'>
      <div class="field">
        <%= f.label :your_email %><br>
        <%= f.text_field :email %>
      </div>
      <div class="field">
        <%= f.label :your_name %><br>
        <%= f.text_field :name %>
      </div>
      <div class="field">
        <%= f.label :subject %><br>
        <%= f.text_field :subject %>
      </div>
      <div class="field">
        <%= f.label :message %><br>
        <%= f.text_area :message %>
      </div>
      <div class="actions">
        <%= f.button %>
      </div>
      </div>
    <div class='col-lg-3'></div>
    
  </div>
<% end %>


