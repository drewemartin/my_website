<div class='row'>
  <div class='col-lg-3'></div>
  <div class='col-lg-6' align='center'>
    <div id='form_border'>
      <h1>Admin Login</h1>
      <%= render 'form' %>
      <button class='btn btn-info' type='button'>
         <%= link_to 'Create Account', new_user_path, :id => 'white_text' %>
      </button>  
    </div>  
  </div>
  <div class='col-lg-3'></div>
</div>


<div class="btn-group btn-group-justified" id='user_sessions_footer'>
  <div class="btn-group">
    <%= link_to(abouts_path) do %>
    <button type="button" class="btn btn-default"><span class='footer_text_color'>About Me</span></button>
    <% end %>
  </div>
  <div class="btn-group">
    <%= link_to(blog_articles_path) do %>
    <button type="button" class="btn btn-default"><span class='footer_text_color'>Blog</span></button>
    <% end %>
  </div>
  <div class="btn-group">
    <%= link_to(new_letter_path) do %>
    <button type="button" class="btn btn-default"><span class='footer_text_color'>Contact</span></button>
    <% end %>
</div>

<script type="text/javascript">
  $( document ).ready(function() {
    $('button')
      .eq(1)
      .addClass('btn btn-info');

});
</script>