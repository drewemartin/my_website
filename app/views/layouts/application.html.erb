<!DOCTYPE html>
<html>
<head>
  <title>MyWebsite</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>



<%= render 'layouts/navbar' %>

<div class="container">

  <div class='row'>

      <% if flash[:notice] != nil %>
        <div class='col-lg-12' id='notice_div' align='center'>
          <h3 id="notice"><%= flash[:notice] %></h3>
        </div>        
      <% elsif flash[:alert] != nil %>
        <div class='col-lg-12' id='alert_div' align='center'>
          <h3 id="alert"><%= flash[:alert] %></h3>
        </div>
      <% end %>

  </div>

  <%= yield %>




 

</div>






</body>
</html>
